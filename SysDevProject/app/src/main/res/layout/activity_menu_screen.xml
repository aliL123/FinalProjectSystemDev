<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".MenuScreen">

    <Button
        android:id="@+id/menuDrinksButton"
        android:layout_width="215dp"
        android:layout_height="153dp"
        android:layout_marginTop="604dp"
        android:text="@string/drink_title"
        android:background="@color/purple_500"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <Button
        android:id="@+id/menuBibimbapButton"
        android:layout_width="215dp"
        android:layout_height="153dp"
        android:layout_marginTop="452dp"
        android:text="Bibimbap"
        android:background="@color/purple_500"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <Button
        android:id="@+id/menuPlateButton"
        android:layout_width="215dp"
        android:layout_height="153dp"
        android:background="@color/purple_500"
        android:layout_marginTop="304dp"
        android:text="@string/plate_title"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />
    <Button
        android:id="@+id/menu2SetButton"
        android:layout_width="215dp"
        android:layout_height="153dp"
        android:layout_marginTop="152dp"
        android:background="@color/purple_500"
        android:text="@string/twos_set_title"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <Button
        android:id="@+id/menuCheckoutButton"
        android:layout_width="537dp"
        android:layout_height="90dp"
        android:layout_marginStart="215dp"
        android:layout_marginLeft="215dp"
        android:layout_marginTop="672dp"
        android:text="@string/checkout"
        android:textSize="20dp"
        app:backgroundTint="#6EB528"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <Button
        android:id="@+id/menuCancelOrderButton"
        android:layout_width="530dp"
        android:layout_height="90dp"
        android:layout_marginStart="752dp"
        android:layout_marginLeft="752dp"
        android:layout_marginTop="672dp"
        android:text="@string/cancel"
        android:textSize="20dp"
        app:backgroundTint="#B12D2D"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <Button
        android:id="@+id/menuComboButton"
        android:layout_width="215dp"
        android:layout_height="153dp"
        android:text="@string/combo_title"
        android:background="@color/purple_500"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />


    <TextView
        android:id="@+id/menuScreenHeader"
        android:layout_width="1074dp"
        android:layout_height="104dp"
        android:layout_marginTop="7dp"
        android:gravity="center"
        android:text="2 set items"
        android:textSize="25dp"
        app:layout_constraintStart_toEndOf="@+id/menuComboButton"
        app:layout_constraintTop_toTopOf="parent" />

    <ImageView
        android:id="@+id/imageView"
        android:layout_width="112dp"
        android:layout_height="95dp"
        android:layout_marginStart="24dp"
        android:layout_marginLeft="24dp"
        android:layout_marginTop="16dp"
        android:src="@drawable/hohologo"
        app:layout_constraintStart_toStartOf="@+id/menuScreenHeader"
        app:layout_constraintTop_toTopOf="parent" />

    <androidx.recyclerview.widget.RecyclerView
        android:id="@+id/menuRecyclerView"
        android:layout_width="1026dp"
        android:layout_height="517dp"
        android:layout_marginStart="24dp"
        android:layout_marginLeft="24dp"
        android:layout_marginTop="28dp"
        app:layout_constraintStart_toEndOf="@+id/menuDrinksButton"
        app:layout_constraintTop_toBottomOf="@+id/menuScreenHeader" />

</androidx.constraintlayout.widget.ConstraintLayout>