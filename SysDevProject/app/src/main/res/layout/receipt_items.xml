<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">

    <ImageView
        android:id="@+id/receiptItemImage"
        android:layout_width="180dp"
        android:layout_height="120dp"
        android:layout_marginStart="128dp"
        android:layout_marginLeft="128dp"
        android:layout_marginTop="30dp"
        android:src="@drawable/hohologo"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <TextView
        android:id="@+id/receiptItemName"
        android:layout_width="595dp"
        android:layout_height="60dp"
        android:layout_marginStart="8dp"
        android:layout_marginLeft="8dp"
        android:layout_marginTop="56dp"
        android:gravity="center"
        android:text="Item Name"
        android:textSize="30dp"
        app:layout_constraintStart_toEndOf="@+id/receiptItemImage"
        app:layout_constraintTop_toTopOf="parent" />

    <TextView
        android:id="@+id/receiptItemPrice"
        android:layout_width="236dp"
        android:layout_height="60dp"
        android:layout_marginStart="4dp"
        android:layout_marginLeft="4dp"
        android:layout_marginTop="56dp"
        android:gravity="center"
        android:text="Item Price"
        android:textSize="30dp"
        app:layout_constraintStart_toEndOf="@+id/receiptItemName"
        app:layout_constraintTop_toTopOf="parent" />

</androidx.constraintlayout.widget.ConstraintLayout>